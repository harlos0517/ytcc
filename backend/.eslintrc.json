{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "indent": ["error", 2],
    "semi": ["warn", "never"],
    "quotes": ["warn", "single"],
    "comma-dangle": ["warn", "always-multiline"],
    "@typescript-eslint/no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "arrow-parens": ["warn", "as-needed"]
  }
}
